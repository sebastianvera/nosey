{
  "manifest_version": 2,
  "name": "nosey",
  "description": "This extension checks for libraries imports and transforms them to a link, this way it's easy to surf code and discover/inspect new libraries when browsing source code on Github",
  "version": "1.0",
  "background": {
    "scripts": ["./background.js"],
    "persitent": false
  },
  "content_scripts": [{
    "matches": ["https://github.com/*", "https://www.github.com/*"],
    "js": ["./index.js"]
  }],
  "icons": {
    "16": "./logo16.png",
    "48": "./logo48.png",
    "128": "./logo128.png"
  },
  "page_action": {
    "default_icon": {
      "16": "./logo16.png",
      "24": "./logo24.png",
      "32": "./logo32.png"
    }
  },
  "permissions": ["tabs"]
}
